@if (ShowDialog)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Employee Add</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <EditForm Model="@Employee" OnValidSubmit="@ValidSubmit">
                    <div class="modal-body">

                        <div class="row">

                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="form-group col-6">
                                <label for="firstName">First Name:</label>
                                <InputText id="firstName" class="form-control" @bind-Value="@Employee.FirstName" placeholder="First Name" />
                                <ValidationMessage For="@(()=> Employee.FirstName)" />
                            </div>

                            <div class="form-group col-6">
                                <label for="lastName">Last Name:</label>
                                <InputText id="lastName" class="form-control" @bind-Value="@Employee.LastName" placeholder="Last Name" />
                                <ValidationMessage For="@(()=> Employee.FirstName)" />
                            </div>

                            <div class="form-group col-12">
                                <label for="email">E Mail</label>
                                <InputText id="email" class="form-control" @bind-Value="@Employee.Email" placeholder="E Mail" />
                                <ValidationMessage For="@(()=> Employee.Email)" />
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="@Close">Close</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}
